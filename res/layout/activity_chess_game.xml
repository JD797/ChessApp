<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="${relativePackage}.${activityClass}" >

    <GridLayout
	    android:id="@+id/gridLayout"
	    android:background="@drawable/chessboard"
	    android:columnCount="8"
	    android:rowCount="8"
	    android:layout_weight="70"
	    android:layout_width="match_parent"
	    android:layout_height="0dp" >
	    
        <ImageView
		     android:id="@+id/piece1"
		     android:layout_column="0"
		     android:layout_row="0"
		     android:layout_width="35dp"
		     android:layout_height="35dp"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />
        
        <ImageView
		     android:id="@+id/piece2"
		     android:layout_column="1"
		     android:layout_row="0"
		     android:layout_width="35dp"
		     android:layout_height="35dp"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />
        
        <ImageView
		     android:id="@+id/piece3"
		     android:layout_column="2"
		     android:layout_row="0"
		     android:layout_width="35dp"
		     android:layout_height="35dp"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />
        
        <ImageView
		     android:id="@+id/piece4"
		     android:layout_column="3"
		     android:layout_row="0"
		     android:layout_width="35dp"
		     android:layout_height="35dp"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />
        
        <ImageView
		     android:id="@+id/piece5"
		     android:layout_column="4"
		     android:layout_row="0"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />
        
        <ImageView
		     android:id="@+id/piece6"
		     android:layout_column="5"
		     android:layout_row="0"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />
        
        <ImageView
		     android:id="@+id/piece7"
		     android:layout_column="6"
		     android:layout_row="0"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />
        
        <ImageView
		     android:id="@+id/piece8"
		     android:layout_column="7"
		     android:layout_row="0"
		     android:layout_gravity="center"
		     android:src="@drawable/ic_launcher" />"
 
	</GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="15"
        android:layout_marginTop="10dp"
        android:layout_height="0dp" >

        <Button
            android:id="@+id/undo"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="@string/undo" />

        <Button
            android:id="@+id/ai"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="@string/ai" />

        <Button
            android:id="@+id/draw"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="@string/draw" />

        <Button
            android:id="@+id/resign"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="@string/resign" />

    </LinearLayout>

    <TextView
        android:id="@+id/turn"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:text="White Turn" />

</LinearLayout>
